{
  "name": "lingua",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently -n server,client -p \"[{name}]\" --kill-others \"npm run dev -w server\" \"npm run dev -w client\"",
    "dev:server": "npm run dev -w server",
    "dev:client": "npm run dev -w client",
    "build": "npm run build -w client && npm run build -w server",
    "lint": "npm run lint -w client && npm run lint -w server",
    "test:chemistry-solver": "tsx scripts/testChemistrySolver.ts",
    "validate:semantic": "tsx scripts/validateSemanticLinkage.ts",
    "validate:commands": "tsx scripts/validateCommandSemantics.ts",
    "validate:integrity": "tsx scripts/validateSemanticIntegrity.ts",
    "validate:ui-semantics": "tsx scripts/validateUISemantics.ts",
    "validate:docs-semantics": "tsx scripts/validateDocSemanticLinks.ts",
    "generate:semantic-css": "tsx scripts/generateSemanticCSS.ts",
    "validate:topology": "tsx scripts/validateTopologyOptimization.ts",
    "validate:contrast": "tsx scripts/validate-contrast.ts",
    "audit:contrast": "tsx scripts/audit-palette-contrast.ts",
    "validate:all": "npm run validate:semantic && npm run validate:commands && npm run validate:integrity && npm run validate:ui-semantics && npm run validate:docs-semantics && npm run validate:topology && npm run validate:contrast && npm run generate:agent-catalog && npm run validate:semantic-integration",
    "analyze:semantic": "tsx scripts/comprehensiveSemanticAnalysis.ts",
    "analyze:coverage": "tsx scripts/analyzeNodeSemanticCoverage.ts",
    "analyze:coverage2": "tsx scripts/analyzeCoverage2.ts",
    "regenerate:node-ops": "node scripts/regenerateNodeSemanticOps.js",
    "generate:semantic-ids": "node scripts/generateSemanticOpIds.js",
    "generate:agent-catalog": "tsx scripts/generateAgentCatalog.ts",
    "validate:semantic-integration": "tsx scripts/validateSemanticIntegration.ts",
    "precommit": "npm run validate:all"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tsx": "^4.21.0",
    "yaml": "^2.8.2"
  }
}
